<% layout('layout/boilerplate.ejs') %>

<div class="profile-container container">
    <div class="profile-card">
        <div class="profile-avatar">
            <div class="avatar-placeholder">
                <i class="fas fa-user-circle"></i>
            </div>
        </div>
        <h3 class="profile-title">Your Profile</h3>
        <ul class="profile-list">
            <li><i class="fas fa-user"></i><strong>First Name:</strong> <%= user.firstName %></li>
            <li><i class="fas fa-user"></i><strong>Last Name:</strong> <%= user.lastName %></li>

            <% if(user.bio){ %>
                <li><i class="fas fa-info-circle"></i><strong>Bio:</strong> <%= user.bio %></li>
            <% } %>

            <% if(user.location.city){ %>
                <li><i class="fas fa-map-marker-alt"></i><strong>City:</strong> <%= user.location.city %></li>
            <% } %>

            <% if(user.location.country){  %>
                <li><i class="fas fa-globe"></i><strong>Country:</strong> <%= user.location.country %></li>
            <% } %>

            <li><i class="fas fa-at"></i><strong>Username:</strong> <%= user.username %></li>
            <li><i class="fas fa-envelope"></i><strong>Email:</strong> <%= user.email %></li>
        </ul>
    </div>
</div>

<div class="profile-container container">
    <button class="btn btn-warning edit-button">Edit Profile</button>
</div>

<div class="mb-3 container password">
    <form action="/user" method="post">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password">
        <button class="btn btn-primary m-3">Enter</button>
    </form>
</div>