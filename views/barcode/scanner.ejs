<!-- views/barcode/scanner.ejs -->
<% layout('layout/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="fas fa-barcode"></i> Scan Product Barcode</h3>
                </div>
                <div class="card-body">
                    <!-- Scanner Status -->
                    <div id="scannerStatus" class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Click "Start Scanner" to begin
                    </div>

                    <!-- Camera Selection -->
                    <div class="mb-3">
                        <label for="cameraSelect" class="form-label">Select Camera:</label>
                        <select id="cameraSelect" class="form-select">
                            <option value="">Loading cameras...</option>
                        </select>
                    </div>

                    <!-- Scanner Controls -->
                    <div class="mb-3 text-center">
                        <button id="startBtn" class="btn btn-success btn-lg">
                            <i class="fas fa-camera"></i> Start Scanner
                        </button>
                        <button id="stopBtn" class="btn btn-danger btn-lg" style="display: none;">
                            <i class="fas fa-stop"></i> Stop Scanner
                        </button>
                    </div>

                    <!-- Video Preview -->
                    <div id="videoContainer" class="position-relative" style="display: none;">
                        <video id="video" width="100%" style="border: 2px solid #28a745; border-radius: 8px;"></video>
                        <div id="scanLine" style="position: absolute; top: 50%; left: 0; width: 100%; height: 2px; background: red; animation: scan 2s infinite;"></div>
                    </div>

                    <!-- Manual Entry Option -->
                    <div class="mt-4">
                        <hr>
                        <h5>Or Enter Barcode Manually:</h5>
                        <div class="input-group">
                            <input type="text" id="manualBarcode" class="form-control" placeholder="Enter barcode number">
                            <button id="manualLookupBtn" class="btn btn-primary">
                                <i class="fas fa-search"></i> Look Up
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Form (Hidden Initially) -->
            <div id="productFormCard" class="card shadow mt-4" style="display: none;">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-box-open me-2"></i>Product Details</h4>
                </div>
                <div class="card-body">
                    <form id="productForm">
                        <input type="hidden" id="barcode" name="barcode">
                        
                        <div class="mb-3">
                            <label for="name" class="form-label text-dark"><i class="fas fa-tag me-1"></i>Product Name *</label>
                            <input type="text" class="form-control border-success" id="name" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label for="brand" class="form-label text-dark"><i class="fas fa-industry me-1"></i>Brand *</label>
                            <input type="text" class="form-control border-success" id="brand" name="brand" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label text-dark"><i class="fas fa-list-alt me-1"></i>Category *</label>
                                <select class="form-select border-success" id="category" name="category" required>
                                    <option value="">Select Category</option>
                                    <option value="Food">Food</option>
                                    <option value="Beverage">Beverage</option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Clothing">Clothing</option>
                                    <option value="Personal Care">Personal Care</option>
                                    <option value="Household">Household</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label text-dark"><i class="fas fa-dollar-sign me-1"></i>Price ($) *</label>
                                <input type="number" class="form-control border-success" id="price" name="price" step="0.01" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="material" class="form-label text-dark"><i class="fas fa-box me-1"></i>Material/Packaging</label>
                                <input type="text" class="form-control border-success" id="material" name="material" placeholder="e.g., Plastic, Glass">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="weight" class="form-label text-dark"><i class="fas fa-weight-hanging me-1"></i>Weight/Quantity</label>
                                <input type="text" class="form-control border-success" id="weight" name="weight" placeholder="e.g., 500g, 1L">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="originCountry" class="form-label text-dark"><i class="fas fa-flag-usa me-1"></i>Country of Origin</label>
                            <input type="text" class="form-control border-success" id="originCountry" name="originCountry">
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="fas fa-leaf me-1"></i> Analyze Environmental Impact
                            </button>
                            <button type="button" id="cancelBtn" class="btn btn-secondary btn-lg shadow-sm">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>