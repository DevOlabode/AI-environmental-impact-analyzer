<% layout('layout/boilerplate.ejs') %>

<h3 class="text-primary m-3">Edit Product</h3>
<div class="container">
    <form action="/form/edit-products/<%= product._id %>" method="post" class="row g-3 needs-validation" novalidate>
        <div class="mb-3">
            <label for="product-name" class="form-label text-primary">Name *</label>
            <input type="text" value="<%= product.name %>" name="name" id="product-name" class="form-control" placeholder="Product Name" required>
            <div class="invalid-feedback">
                Product name is required.
            </div>
        </div>

        <div class="mb-3">
            <label for="product-category" class="form-label text-primary">Category *</label>
            <input type="text" name="category" value="<%= product.category %>" id="product-category" class="form-control" placeholder="Category like Food, Soap, fruit etc" required>
            <div class="invalid-feedback">
                Category is required.
            </div>
        </div>

        <div class="mb-3">
            <label for="product-brand" class="form-label text-primary">Brand</label>
            <input type="text" name="brand" value="<%= product.brand %>" id="product-brand" class="form-control" placeholder="Product Brand">
        </div>

        <div class="mb-3">
            <label for="product-material" class="form-label text-primary">Material *</label>
            <input type="text" name="material" value="<%= product.material %>" id="product-material" class="form-control" placeholder="Material like plastic, glass, cardboard etc" required>
            <div class="invalid-feedback">
                Material is required.
            </div>
        </div>

        <div class="mb-3">
            <label for="product-weight" class="form-label text-primary">Weight</label>
            <input type="number" name="weight" value="<%= product.weight %>" id="product-weight" class="form-control" placeholder="Product Weight" min="0" step="0.01">
        </div>

        <div class="mb-3">
            <label for="product-originCountry" class="form-label text-primary">Origin Country</label>
            <input type="text" name="originCountry" value="<%= product.originCountry %>" id="product-originCountry" class="form-control" placeholder="Country of origin">
        </div>

        <button type="submit" class="btn btn-primary">Update Product</button>
        <a href="/form/show-products/<%= product._id %>" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
