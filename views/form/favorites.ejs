<% layout('layout/boilerplate.ejs') %>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="fas fa-star me-2 text-warning"></i>Your Favourites
            </h1>
            <p class="text-white opacity-50 mb-0">Starred products for quick access and analysis</p>
        </div>
        <a href="/form/all-products" class="btn btn-outline-light">
            <i class="fas fa-list me-2"></i>View All Products
        </a>
    </div>

    <!-- ðŸ” Search & Filter Form -->
    <form method="GET" action="/form/favorites" class="card p-3 mb-4 shadow-sm bg-light">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="search" class="form-label text-warning fw-bold">
                    <i class="fas fa-search me-2"></i>Search (name, brand, category)
                </label>
                <input type="text" id="search" name="search" class="form-control"
                       placeholder="Search favorites..." value="<%= search || '' %>">
            </div>

            <div class="col-md-3">
                <label for="category" class="form-label text-warning fw-bold">
                    <i class="fas fa-folder me-2"></i>Category
                </label>
                <input type="text" id="category" name="category" class="form-control"
                       placeholder="e.g. Footwear" value="<%= category || '' %>">
            </div>

            <div class="col-md-3">
                <label for="brand" class="form-label text-warning fw-bold">
                    <i class="fas fa-building me-2"></i>Brand
                </label>
                <input type="text" id="brand" name="brand" class="form-control"
                       placeholder="e.g. Nike" value="<%= brand || '' %>">
            </div>

            <div class="col-md-2 d-flex justify-content-between">
                <button type="submit" class="btn btn-warning w-100 me-2">
                    <i class="fas fa-filter me-1"></i>Apply
                </button>
                <a href="/form/favorites" class="btn btn-secondary w-100">
                    <i class="fas fa-undo me-1"></i>Reset
                </a>
            </div>
        </div>
    </form>

    <% if(products && products.length > 0){ %>
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-tag me-2"></i>Product Name
                                </th>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-folder me-2"></i>Category
                                </th>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-building me-2"></i>Brand
                                </th>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-dollar-sign me-2"></i>Price
                                </th>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-cubes me-2"></i>Material
                                </th>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-weight me-2"></i>Weight
                                </th>
                                <th class="border-0 fw-bold text-warning">
                                    <i class="fas fa-globe me-2"></i>Origin
                                </th>
                                <th class="border-0 fw-bold text-warning text-center">
                                    <i class="fas fa-chart-line me-2"></i>Analysis
                                </th>
                                <th class="border-0 fw-bold text-warning text-center">
                                    <i class="fas fa-cogs me-2"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let product of products){ %>
                                <tr class="align-middle">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="fas fa-star text-warning"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold">
                                                    <a href="/form/show-products/<%= product._id %>" class="text-decoration-none">
                                                        <%= product.name %>
                                                    </a>
                                                </h6>
                                                <small class="text-muted">ID: <%= product._id.toString().slice(-6) %></small>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td> <a href="/form/favorites?category=<%= product.category %>"> <span class="badge bg-primary"><%= product.category || 'N/A' %></span> </a></td>
                                    <td> <a href="/form/favorites?brand=<%= product.brand %>"> <span class="badge bg-warning"><%= product.brand || 'N/A' %></span> </a></td>
                                    <td><%= product.price ? '$' + product.price : 'N/A' %></td>
                                    <td><%= product.material || 'N/A' %></td>
                                    <td><%= product.weight ? product.weight + ' KG' : 'N/A' %></td>
                                    <td><%= product.originCountry || 'N/A' %></td>
                                    <td class="text-center">
                                        <% if(product.impactAnalysis){ %>
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Analyzed
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>Pending
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="/form/show-products/<%= product._id %>"
                                               class="btn btn-sm btn-outline-primary"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <form method="POST" action="/form/toggle-favorite/<%= product._id %>" style="display: inline;">
                                                <button type="submit" class="btn btn-sm <%= product.favourite ? 'btn-warning' : 'btn-outline-warning' %>" title="Toggle Favorite">
                                                    <i class="fas <%= product.favourite ? 'fa-star' : 'fa-star' %>"></i>
                                                </button>
                                            </form>
                                            <a href="/form/edit/<%= product._id %>"
                                               class="btn btn-sm btn-outline-warning"
                                               title="Edit Product">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <small>Showing <%= products.length %> favorite product<%= products.length !== 1 ? 's' : '' %></small>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-star fa-4x text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">No Favorites Yet</h3>
            <p class="text-muted mb-4">Star some products from your database to see them here. Important items will appear in this quick-access view.</p>
            <a href="/form/all-products" class="btn btn-outline-warning">
                <i class="fas fa-star me-2"></i>Browse and Star Products
            </a>
        </div>
    <% } %>
</div>
