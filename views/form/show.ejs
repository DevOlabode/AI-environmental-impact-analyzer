<% layout('layout/boilerplate.ejs') %>

<div class="show-container">
    <div class="show-card">
        <div class="show-header">
            <h1 class="show-title">
                <i class="fas fa-tag me-3"></i><%= product.name %>
            </h1>
            <p class="show-subtitle text-white opacity-50">
                <i class="fas fa-calendar me-1"></i>Analyzed on <%= product.createdAt ? product.createdAt.toDateString() : 'Unknown date' %>

            </p>
        </div>
        <div class="show-body">
            <!-- Product Details Section -->
            <div class="show-section">
                <h4 class="d-flex align-items-center justify-content-between">
                    <span><i class="fas fa-info-circle me-2"></i>Product Details</span>
                    <button class="btn btn-sm btn-outline-primary d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#productDetailsCollapse" aria-expanded="false" aria-controls="productDetailsCollapse">

            <div class="show-actions">
                <a href="/form/all-products" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to All Products
                </a>
                <% if(currentUser){ %>
                    <a href="/form/edit/<%= product._id %>" class="btn btn-outline-warning">
                        <i class="fas fa-edit me-2"></i>Edit Product
                    </a>
                    <form method="POST" action="/form/toggle-favorite/<%= product._id %>" class="d-inline">
                        <button type="submit" class="btn <%= product.favourite ? 'btn-warning' : 'btn-outline-warning' %>"
                                title="Toggle Favorite">
                            <i class="fas fa-star"></i>
                        </button>
                    </form>
                    <form action="/form/delete-product/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this product?')">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</div>
