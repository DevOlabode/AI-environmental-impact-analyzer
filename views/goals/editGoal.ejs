<% layout('layout/boilerplate.ejs') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-edit me-3"></i>Edit Your CO2 Reduction Goal
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Update your environmental impact goal</p>
                </div>

                <div class="card-body p-4">
                    <form action="/goals/update-goal" method="POST" id="editGoalForm">
                        <!-- Goal Title -->
                        <div class="mb-4">
                            <label for="goalTitle" class="form-label fw-bold">
                                <i class="fas fa-tag text-success me-2"></i>Goal Title
                            </label>
                            <input type="text" class="form-control form-control-lg" id="goalTitle" name="title"
                                   value="<%= goal.title %>" required>
                            <div class="form-text">Give your goal a clear, motivating name</div>
                        </div>

                        <!-- CO2 Reduction Target -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label for="reductionAmount" class="form-label fw-bold">
                                    <i class="fas fa-cloud text-success me-2"></i>CO2 Reduction Target
                                </label>
                                <div class="input-group input-group-lg">
                                    <input type="number" class="form-control form-control-lg border-success" id="reductionAmount"
                                           name="reductionTarget" value="<%= goal.reductionTarget %>" placeholder="100" min="1" step="0.1" required
                                           style="border-top-right-radius: 0; border-bottom-right-radius: 0;">
                                    <span class="input-group-text bg-success text-white border-success"
                                          style="border-top-left-radius: 0; border-bottom-left-radius: 0; min-width: 80px;">
                                        <i class="fas fa-cloud me-1"></i>kg COâ‚‚
                                    </span>
                                </div>
                                <div class="form-text opacity-75">
                                    <small>Enter the amount of CO2 you want to reduce (in kilograms)</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="timeframe" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>Timeframe
                                </label>
                                <select class="form-select form-select-lg" id="timeframe" name="timeframe" required>
                                    <option value="">Select timeframe</option>
                                    <option value="Monthly" <%= goal.timeframe === 'Monthly' ? 'selected' : '' %>>Monthly</option>
                                    <option value="Quarterly" <%= goal.timeframe === 'Quarterly' ? 'selected' : '' %>>Quarterly</option>
                                    <option value="Yearly" <%= goal.timeframe === 'Yearly' ? 'selected' : '' %>>Yearly</option>
                                    <option value="Custom" <%= goal.timeframe === 'Custom' ? 'selected' : '' %>>Custom Period</option>
                                </select>
                            </div>
                        </div>

                        <!-- Date Range -->
                        <div class="mb-4" id="dateRangeSection">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar text-info me-2"></i>Period Details
                            </label>
                            <div class="row">
                                <div class="col-md-6" id="startDateContainer">
                                    <label for="startDate" class="form-label">Start Date</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate"
                                           value="<%= goal && goal.startDate ? goal.startDate.toISOString().split('T')[0] : '' %>">
                                </div>
                                <div class="col-md-6" id="endDateContainer">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate"
                                           value="<%= goal && goal.endDate ? goal.endDate.toISOString().split('T')[0] : '' %>">
                                </div>
                            </div>
                        </div>

                        <!-- Motivation/Description -->
                        <div class="mb-4">
                            <label for="description" class="form-label fw-bold">
                                <i class="fas fa-heart text-danger me-2"></i>Motivation & Notes
                            </label>
                            <textarea class="form-control" id="description" name="notes" rows="4"
                                      placeholder="Why is this goal important to you? Any specific strategies or notes..."><%= goal.notes %></textarea>
                            <div class="form-text">Optional: Share what motivates you and how you plan to achieve this goal</div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/goals" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>Update Goal
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Progress Tips Card -->
                <div class="card-footer bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-success mb-2">
                                <i class="fas fa-lightbulb me-2"></i>Tips for Success
                            </h6>
                            <ul class="list-unstyled small mb-0">
                                <li><i class="fas fa-check text-success me-2"></i>Start with achievable targets</li>
                                <li><i class="fas fa-check text-success me-2"></i>Track your progress regularly</li>
                                <li><i class="fas fa-check text-success me-2"></i>Celebrate small victories</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-info mb-2">
                                <i class="fas fa-leaf me-2"></i>Impact Examples
                            </h6>
                            <ul class="list-unstyled small mb-0">
                                <li><i class="fas fa-tree text-success me-2"></i>Planting trees</li>
                                <li><i class="fas fa-bicycle text-success me-2"></i>Using sustainable transport</li>
                                <li><i class="fas fa-recycle text-success me-2"></i>Reducing waste</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
