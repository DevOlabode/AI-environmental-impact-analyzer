<!-- Main Content -->
<div class="container my-5">
    <div class="row g-4">
        <!-- Goal Form -->
        <div class="col-lg-8">
            <div class="content-card">
                <div class="card-header-custom">
                    <h3 class="mb-0 text-success">
                        <i class="fas fa-plus-circle me-2"></i>Create New Goal
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/goals/save-goal" method="POST" id="goalForm" class="needs-validation" novalidate>
                        <div class="row g-3">
                            <!-- Goal Title -->
                            <div class="col-12">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">Goal Title</div>
                                        <input type="text" class="form-control" name="title"
                                               placeholder="e.g., Reduce my carbon footprint by 20%" required>
                                        <div class="form-text">Give your goal a clear, motivating name</div>
                                    </div>
                                </div>
                            </div>

                            <!-- CO2 Reduction Target -->
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-cloud"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">CO2 Reduction Target</div>
                                        <div class="input-group">
                                            <input type="number" class="form-control" name="reductionTarget"
                                                   placeholder="100" min="1" step="0.1" required>
                                            <span class="input-group-text">kg COâ‚‚</span>
                                        </div>
                                        <div class="form-text">Amount of CO2 you want to reduce</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Timeframe -->
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">Timeframe</div>
                                        <select class="form-select" name="timeframe" id="timeframe" required>
                                            <option value="">Select timeframe</option>
                                            <option value="Monthly">Monthly</option>
                                            <option value="Quarterly">Quarterly</option>
                                            <option value="Yearly">Yearly</option>
                                            <option value="Custom">Custom Period</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Start Date -->
                            <div class="col-md-6" id="startDateContainer">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">Start Date</div>
                                        <input type="date" class="form-control" name="startDate" id="startDate">
                                        <div class="form-text">Leave empty to start today</div>
                                    </div>
                                </div>
                            </div>

                            <!-- End Date -->
                            <div class="col-md-6" id="endDateContainer" style="display: none;">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">End Date</div>
                                        <input type="date" class="form-control" name="endDate" id="endDate">
                                        <div class="form-text">Custom end date</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Notes -->
                            <div class="col-12">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-sticky-note"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">Motivation & Notes</div>
                                        <textarea class="form-control" name="notes" rows="3"
                                                  placeholder="Why is this goal important to you? Any specific strategies or notes..."></textarea>
                                        <div class="form-text">Optional: Share what motivates you</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-flex gap-2 mt-4">
                            <a href="/goals" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Goals
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-rocket me-2"></i>Create Goal
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Tips for Success -->
            <div class="content-card mb-4">
                <div class="card-header-custom">
                    <h4 class="mb-0 text-success">
                        <i class="fas fa-lightbulb me-2"></i>Tips for Success
                    </h4>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
