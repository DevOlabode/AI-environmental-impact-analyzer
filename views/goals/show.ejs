<!-- Hero Section -->
<div class="hero-section">
    <div class="container-fluid">
        <div class="row align-items-center min-vh-50 m-5">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="display-4 fw-bold text-white mb-3">
                    <i class="fas fa-bullseye me-3"></i><%= goal.title %>
                </h1>
                <p class="lead text-white-50 mb-4">Track your environmental impact reduction progress</p>
                <div class="d-flex flex-wrap justify-content-center justify-content-lg-start gap-3">
                    <div class="stat-card">
                        <div class="stat-value"><%= progress %>%</div>
                        <div class="stat-label">Progress</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value"><%= totalCO2.toFixed(2) %> kg</div>
                        <div class="stat-label">Current CO₂</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value"><%= goal.reductionTarget %> kg</div>
                        <div class="stat-label">Target</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="progress-container">
                    <div class="progress-ring" style="--progress: <%= progress %>%">
                        <div class="progress-ring-circle">
                            <div class="progress-ring-inner">
                                <span class="progress-percentage"><%= progress %>%</span>
                                <span class="progress-label">Complete</span>
                            </div>
                        </div>
                    </div>
                    <% if (goalReached) { %>
                        <div class="achievement-badge">
                            <i class="fas fa-trophy"></i>
                            <span>Goal Achieved!</span>
                        </div>
                    <% } else if (timeframeEnded) { %>
                        <div class="achievement-badge expired">
                            <i class="fas fa-times-circle"></i>
                            <span>Timeframe Ended</span>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    <div class="row g-4">
        <!-- Goal Details -->
        <div class="col-lg-8">
            <div class="content-card">
                <div class="card-header-custom">
                    <h3 class="mb-0 text-success">
                        <i class="fas fa-info-circle me-2"></i>Goal Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="fas fa-tag"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Title</div>
                                    <div class="detail-value"><%= goal.title %></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="fas fa-cloud"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Reduction Target</div>
                                    <div class="detail-value"><%= goal.reductionTarget %> kg CO₂</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Timeframe</div>
                                    <div class="detail-value"><%= goal.timeframe %></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="fas fa-calendar"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Start Date</div>
                                    <div class="detail-value"><%= new Date(goal.startDate).toLocaleDateString() %></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-icon">
                                    <i class="fas fa-calendar-check"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">End Date</div>
                                    <div class="detail-value"><%= new Date(goal.endDate).toLocaleDateString() %></div>
                                </div>
                            </div>
                        </div>
                        <% if (goal.notes) { %>
                            <div class="col-12">
                                <div class="detail-item">
                                    <div class="detail-icon">
                                        <i class="fas fa-sticky-note"></i>
                                    </div>
                                    <div class="detail-content">
                                        <div class="detail-label">Notes</div>
                                        <div class="detail-value"><%= goal.notes %></div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Time Remaining -->
            <div class="content-card mb-4">
                <div class="card-header-custom">
                    <h4 class="mb-0 text-success">
                        <i class="fas fa-clock me-2"></i>Time Status
                    </h4>
                </div>
                <div class="card-body text-center">
                    <% const today = new Date(); %>
                    <% const endDate = new Date(goal.endDate); %>
                    <% const timeDiff = endDate - today; %>
                    <% const daysRemaining = Math.ceil(timeDiff / (1000 * 60 * 60 * 24)); %>
                    <% if (daysRemaining > 0) { %>
                        <div class="time-status active">
                            <div class="time-value"><%= daysRemaining %></div>
                            <div class="time-label">Days Remaining</div>
                        </div>
                    <% } else if (daysRemaining === 0) { %>
                        <div class="time-status warning">
                            <div class="time-value">0</div>
                            <div class="time-label">Ends Today</div>
                        </div>
                    <% } else { %>
                        <div class="time-status expired">
                            <div class="time-value">0</div>
                            <div class="time-label">Goal Expired</div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Actions -->
            <div class="content-card">
                <div class="card-header-custom">
                    <h4 class="mb-0 text-success">
                        <i class="fas fa-cogs me-2"></i>Actions
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/goals" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to All Goals
                        </a>
                        <a href="/goals/edit-goal/<%= goal._id %>" class="btn btn-outline-success">
                            <i class="fas fa-edit me-2"></i>Edit Goal
                        </a>
                        <form action="/goals/<%= goal._id %>?_method=delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this goal?')">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fas fa-trash me-2"></i>Delete Goal
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Dark Mode Toggle Functionality for Show Page
document.addEventListener('DOMContentLoaded', function() {
    const themeToggle = document.getElementById('theme-toggle');
    const body = document.body;

    // Check for saved theme preference or default to light mode
    const currentTheme = localStorage.getItem('theme') || 'light';
    if (currentTheme === 'dark') {
        body.classList.add('dark-mode');
        if (themeToggle) {
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        }
    } else {
        if (themeToggle) {
            themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
        }
    }

    // Toggle dark mode
    if (themeToggle) {
        themeToggle.addEventListener('click', function() {
            if (body.classList.contains('dark-mode')) {
                body.classList.remove('dark-mode');
                localStorage.setItem('theme', 'light');
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            } else {
                body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark');
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            }
        });
    }
});
</script>
