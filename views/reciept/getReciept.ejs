<% layout('layout/boilerplate.ejs') %>

<div class="receipt-container">
    <div class="receipt-card">
        <h1 class="receipt-title">Capture Receipt</h1>
        <p class="receipt-subtitle">Take a photo of your receipt to analyze environmental impact</p>
        <div class="camera-container">
            <video id="video" autoplay playsinline></video>
            <div class="camera-overlay">
                <div class="viewfinder"></div>
            </div>
        </div>
        <button id="snap" class="btn btn-primary snap-btn">Take Photo</button>
        <canvas id="canvas" style="display:none;"></canvas>
        <div class="preview-container" id="preview-container" style="display:none;">
            <h3>Preview</h3>
            <img id="preview" alt="Captured Image" class="preview-image"/>
        </div>
    </div>
</div>


