<% layout('layout/boilerplate.ejs') %>

<div class="profile-wrapper">
    <div class="profile-header">
        <div class="profile-avatar">
            <div class="avatar-placeholder">
                <i class="fas fa-user-circle"></i>
            </div>
        </div>
        <div class="profile-info">
            <h1 class="profile-name"><%= user.firstName %> <%= user.lastName %></h1>
            <p class="profile-username">@<%= user.username %></p>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-section">
            <h2 class="section-title">Personal Information</h2>
            <div class="info-grid">
                <div class="info-item">
                    <i class="fas fa-user"></i>
                    <div>
                        <strong>First Name</strong>
                        <p><%= user.firstName %></p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-user"></i>
                    <div>
                        <strong>Last Name</strong>
                        <p><%= user.lastName %></p>
                    </div>
                </div>
                <% if(user.bio){ %>
                <div class="info-item">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>Bio</strong>
                        <p><%= user.bio %></p>
                    </div>
                </div>
                <% } %>
                <% if(user.location.city){ %>
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <strong>City</strong>
                        <p><%= user.location.city %></p>
                    </div>
                </div>
                <% } %>
                <% if(user.location.country){ %>
                <div class="info-item">
                    <i class="fas fa-globe"></i>
                    <div>
                        <strong>Country</strong>
                        <p><%= user.location.country %></p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="profile-section">
            <h2 class="section-title">Account Details</h2>
            <div class="info-grid">
                <div class="info-item">
                    <i class="fas fa-at"></i>
                    <div>
                        <strong>Username</strong>
                        <p><%= user.username %></p>
                    </div>
                </div>
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <strong>Email</strong>
                        <p><%= user.email %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="profile-actions">
            <button class="btn btn-primary edit-button">Edit Profile</button>
            <button class="btn btn-warning password-reset-button">Change Password</button>
        </div>

        <div class="password-section" id="password-reset">
            <div>Sent a 4-digit code to your email</div>
            <form action="/reset-password" method="post" class="password-form">
                <h3>Enter Four-Digit Code</h3>
                <div class="form-group">
                    <label for="resetCode">Enter Four-Digit Code</label>
                    <input type="number" name="resetCode" id="resetCode" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-success">Reset Password</button>
            </form>
        </div>

        <div class="password-section" id="password">
            <form action="/edit-profile" method="post" class="password-form">
                <h3>Edit Profile</h3>
                <div class="form-group">
                    <label for="password">Enter Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter your current password" required>
                </div>
                <button type="submit" class="btn btn-success">Update Profile</button>
            </form>
        </div>
    </div>
</div>
